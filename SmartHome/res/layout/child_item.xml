<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="10" >

    <ImageView
        android:id="@+id/editItems"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/LinearLayout2"
        android:layout_weight="2"
        android:src="@drawable/ic_lightoff" />

    <Switch
        android:id="@+id/switchItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/autoButton"
        android:layout_toRightOf="@+id/editItems"
        android:gravity="center"
        android:text="Switch" />

    <ImageView
        android:id="@+id/autoButton"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignBaseline="@+id/editItems"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14sp"
        android:layout_weight="2"
        android:src="@drawable/ic_autooff" />

</RelativeLayout>